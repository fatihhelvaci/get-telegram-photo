{
  "name": "get-telegram-photo",
  "description": "Fetch Telegram user/group avatars, the (probably) wrong way",
  "version": "2.1.0",
  "repository": "git@github.com:surabayajs/get-telegram-photo.git",
  "author": "Griko Nibras <git@griko.id>",
  "scripts": {
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "format": "yarn format:api && yarn format:index",
    "format:api": "prettier --write \"api/**/*.{js,ts}\"",
    "format:index": "prettier --write \"*.{js,json,md}\""
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "got": "^11.5.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.21",
    "@types/got": "^9.6.11",
    "@vercel/node": "^1.7.4",
    "all-contributors-cli": "^6.17.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "api/**/*.{js,ts}": [
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
